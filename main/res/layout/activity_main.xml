<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewGo"
        android:layout_width="110dp"
        android:layout_height="79dp"
        android:background="#CDDC39"
        android:gravity="center"
        android:onClick="startGame"
        android:text="GO"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timeLeft"
        android:layout_width="53dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:background="#FFC107"
        android:gravity="center"
        android:text="0S"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question"
        android:layout_width="118dp"
        android:layout_height="45dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Question"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/timeLeft"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="28dp"
        android:background="#FF9800"
        android:gravity="center"
        android:text="0/0"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/question"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/option3"
        android:layout_width="116dp"
        android:layout_height="109dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="108dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:onClick="checkAnswer"
        android:text="50"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/option1" />

    <TextView
        android:id="@+id/option2"
        android:layout_width="116dp"
        android:layout_height="109dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="192dp"
        android:background="#FFEB3B"
        android:gravity="center"
        android:onClick="checkAnswer"
        android:text="50"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/option1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/option1"
        android:layout_width="116dp"
        android:layout_height="109dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="192dp"
        android:background="#2196F3"
        android:gravity="center"
        android:onClick="checkAnswer"
        android:text="50"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/option4"
        android:layout_width="116dp"
        android:layout_height="109dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="300dp"
        android:background="#F77850"
        android:gravity="center"
        android:onClick="checkAnswer"
        android:text="50"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/option3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/finalScore"
        android:layout_width="252dp"
        android:layout_height="51dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="373dp"
        android:gravity="center"
        android:text="Your score is : X / Y"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question" />

    <Button
        android:id="@+id/playAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="76dp"
        android:onClick="startGame"
        android:text="Play Again"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/finalScore" />

</androidx.constraintlayout.widget.ConstraintLayout>